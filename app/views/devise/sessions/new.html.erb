<div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm">
  <div class="p-4 sm:p-7">
    <div class="text-center">
      <h1 class="block text-2xl font-bold text-gray-800">Log in</h1>
      <p class="mt-2 text-sm text-gray-600">
        Don't have an account yet?
        <%= link_to "Sign up here", new_registration_path(resource_name), class: "text-blue-600 decoration-2 hover:underline font-medium" %>
      </p>
    </div>

    <div class="mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="grid gap-y-4">
          <div>
            <%= f.label :email, class: "block text-sm mb-2" %>
            <div class="relative">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" %>
            </div>
          </div>

          <div>
            <div class="flex justify-between items-center">
              <%= f.label :password, class: "block text-sm mb-2" %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-blue-600 decoration-2 hover:underline font-medium" %>
            </div>
            <div class="relative">
              <%= f.password_field :password, autocomplete: "current-password", required: true, class: "py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <div class="flex">
                <%= f.check_box :remember_me, class: "shrink-0 mt-0.5 border-gray-200 rounded text-blue-600 focus:ring-blue-500" %>
              </div>
              <div class="ms-3">
                <%= f.label :remember_me, class: "text-sm" %>
              </div>
            </div>
          <% end %>

          <%= f.submit "Log in", class: "w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
